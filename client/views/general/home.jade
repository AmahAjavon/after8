.row
  .col-lg-5.col-md-4.col-xs-3
  .col-lg-2.col-md-4.col-xs-6
    form.form-signin(name='todoForm', novalidate)
      .form-group
        label Email
        input.form-control(type='email', name='email', ng-model='user.email')
        p.help-block(ng-show='signinForm.email.$invalid') Enter a valid email.
      .form-group
        label Password
        input.form-control(type='password', name='password', ng-model='user.password', ng-minlength='3')
        p.help-block(ng-show='signinForm.password.$error.minlength') Min password length is 8 characters.
      button.btn.btn-primary(ng-disabled='!user.email || !user.password', type='button', ng-click='signIn($event)') Sign In
      .form-group
        br
        a.btn.btn-facebook(ng-click='fblogin()')
          i.fa.fa-facebook &nbsp; Sign in with Facebook 
      .form-group
        a.btn.btn-twitter(ng-click='twilogin()')
          i.fa.fa-twitter &nbsp; Sign in with Twitter 
      .form-group
        a.btn.btn-google-plus(ng-click='goologin()')
          i.fa.fa-google-plus &nbsp; Sign in with Google
      .form-group
        label Not a member?
        a(href='#/register')  Sign Up 
  .col-lg-5.col-md-4.col-xs-3  
  
